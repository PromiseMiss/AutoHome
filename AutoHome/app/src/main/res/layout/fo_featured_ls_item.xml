<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/fo_fea_item_iv"
        android:layout_width="@dimen/all_item_common_width"
        android:layout_height="@dimen/all_item_common_height"
        android:layout_marginLeft="@dimen/fo_item_margin_left"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/all_margin"
        >

        <TextView
            android:id="@+id/fo_fea_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ssdfsd"/>


        <TextView
            android:id="@+id/fo_fea_item_smitit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/all_margin"
            android:text="sdfg"/>

        <TextView
            android:id="@+id/fo_fea_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/all_margin"
            android:text="hgjgh"
            />
    </RelativeLayout>
</LinearLayout>