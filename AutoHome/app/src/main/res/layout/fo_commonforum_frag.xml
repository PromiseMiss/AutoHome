<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--常用论坛-->
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/fo_common_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--车系论坛-->
                <LinearLayout
                    android:id="@+id/fo_comm_carcomm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/car"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/fo_comm_margin_top"
                            android:text="@string/fo_comm_carcomm"
                            android:textSize="@dimen/fo_comm_textSize"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/fo_comm_margin_bottom"
                            android:text="@string/fo_comm_carcomm_small"
                            android:textColor="#C0C0C0"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/gray_shallow"/>
                <!--地区论坛-->
                <LinearLayout
                    android:id="@+id/fo_comm_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/weizhi"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/fo_comm_margin_top"
                            android:text="@string/fo_comm_city"
                            android:textSize="@dimen/fo_comm_textSize"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/fo_comm_margin_bottom"
                            android:text="@string/fo_comm_city_small"
                            android:textColor="#C0C0C0"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#C0C0C0"/>
                <!--主题论坛-->
                <LinearLayout
                    android:id="@+id/fo_comm_theme_comm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/qizhi"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/fo_comm_margin_top"
                            android:text="@string/fo_comm_theme_comm"
                            android:textSize="@dimen/fo_comm_textSize"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/fo_comm_margin_bottom"
                            android:text="@string/fo_comm_theme_comm_small"
                            android:textColor="#C0C0C0"/>
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <!--抽屉的布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/fo_commdrawer_ls"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>

                <com.project.main.autohome.tools.SideBar
                    android:id="@+id/fo_sideBar"
                    android:layout_width="30dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center"/>
            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>