<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView

            android:id="@+id/fo_featured_recView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/fo_feature_iv"
            android:scrollbars="none">

        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/fo_feature_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:background="@mipmap/zhuti"/>
    </RelativeLayout>

    <com.project.main.autohome.tools.CustomListView
        android:id="@+id/fo_featured_ls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.project.main.autohome.tools.CustomListView>
</LinearLayout>