<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.design.widget.TabLayout
        android:id="@+id/act_main_tabLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/act_main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/act_main_radio"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/act_main_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/act_main_article"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/act_main_forum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/act_main_forum"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/act_main_findCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/act_main_findcar"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/act_main_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/act_main_sale"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/act_main_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/act_main_my"
            android:button="@null"
            android:gravity="center"
            />

    </RadioGroup>

</LinearLayout>
