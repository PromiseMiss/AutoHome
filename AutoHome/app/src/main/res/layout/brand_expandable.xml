<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--品牌页-->
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/brand_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ExpandableListView
            android:id="@+id/brand_ExpandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#ffffff"
            android:orientation="vertical"
            >

            <RadioGroup
                android:id="@+id/brand_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/brand_radio_shap"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/brand_radio_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="在售"/>

                <RadioButton
                    android:id="@+id/brand_radio_all"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="全部"/>
            </RadioGroup>

            <FrameLayout
                android:id="@+id/brand_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>
        </LinearLayout>


    </android.support.v4.widget.DrawerLayout>
</LinearLayout>