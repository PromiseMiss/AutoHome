<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--品牌页-->
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/brand_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.project.main.autohome.tools.SideBar
                android:id="@+id/sidrbar"
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:layout_gravity="right|center"/>

            <TextView
                android:id="@+id/dialog"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="30.0dip"
                android:visibility="invisible"/>

            <ExpandableListView
                android:id="@+id/brand_ExpandableListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollingCache="false"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#ffffff"
            android:orientation="vertical"
            >

            <RadioGroup
                android:id="@+id/brand_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/brand_radio_shap"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/brand_radio_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="在售"/>

                <RadioButton
                    android:id="@+id/brand_radio_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="全部"/>
            </RadioGroup>

            <FrameLayout
                android:id="@+id/brand_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>
        </LinearLayout>


    </android.support.v4.widget.DrawerLayout>
</LinearLayout>