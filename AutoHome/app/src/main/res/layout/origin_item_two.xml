<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/orig_margin"
              android:orientation="vertical">
    <!-- 有大图的布局，图片的上面有Title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/origin_two_circle_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/orig_margin"
            />

        <TextView
            android:id="@+id/origin_two_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/origin_two_circle_iv"
            android:text="ssfgds"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/origin_tv_body"
            android:layout_margin="@dimen/orig_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sdfasf"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/origin_body_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/origin_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/orig_margin"
            android:layout_marginTop="@dimen/orig_margin"
            android:text="sdfgsdfg"/>
    </LinearLayout>
</LinearLayout>